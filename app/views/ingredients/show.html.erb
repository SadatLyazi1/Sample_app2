<%=render 'shared/page_title',title: 'Recipes for ' + @ingredient.name + " ingredient"%>
<ul class="nav nav-tabs">
  <li class="active"><%= link_to "Recipes", recipes_path%></li>
  <li><%= link_to "Chefs", chefs_path%></li>
</ul>
<%= will_paginate @recipes%>
<%@ingredient.recipes.each do |recipe|%>
    <div class="row">
      <div class="col-lg-2">
        <section class="chef-info center">
          <%= link_to gravatar_for(recipe.chef,size:100),chef_path(recipe.chef) %>
          <h5>Chef name: <%= recipe.chef.name %></h5>
        </section>
      </div>
      <div class="col-lg-6 well">
        <h4><%= link_to recipe.name,recipe_path(recipe) %></h4>
        <p><%= recipe.summary %></p>
        <p>
        <p>Styles:<%= render recipe.styles %></p>
        <p>Ingredients:<%= render recipe.ingredients %></p>
        <span class="quiet"><small>Created: <%=  time_ago_in_words(recipe.created_at) %> ago, </small></span>
        <span class="quiet"><small>Updated: <%=  time_ago_in_words(recipe.updated_at) %> ago</small></span>
        </p>
        
      </div>
      <div class="col-md-4">
        <%= image_tag(recipe.picture.url,size: "250x150",class: "gravatar") if recipe.picture? %>
      </div>
    </div>
    <hr/>
<%end%>
<%= will_paginate @recipes %>